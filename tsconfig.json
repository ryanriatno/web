{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "strictNullChecks": true,
    "baseUrl": ".",
    "types": ["vitest/globals", "node"],
    "preserveConstEnums": true,
    "verbatimModuleSyntax": true,
    "paths": {
      "@*": ["./src/*"]
    }
  },
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"]
}
